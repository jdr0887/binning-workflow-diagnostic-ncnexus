  <name>Binning :: Workflow :: Diagnostic NCNEXUS :: Executor</name>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.renci.binning.workflows.diagnostic-ncnexus</groupId>
  <artifactId>diagnostic-ncnexus-executor</artifactId>
  <version>0.0.11-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <dependencies>
    <dependency>
      <groupId>org.renci.binning.workflows.diagnostic-ncnexus</groupId>
      <artifactId>diagnostic-ncnexus-commons</artifactId>
    </dependency>              
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
	<extensions>true</extensions>
        <configuration>
          <instructions>
            <Private-Package>org.renci.binning.diagnostic.ncnexus.executor.*</Private-Package>
            <Export-Package>org.renci.binning.diagnostic.ncnexus.executor*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>  
</project>
